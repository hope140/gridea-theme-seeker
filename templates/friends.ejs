<html>

<head>
	<%- include('./includes/head', { isPostPage: false, siteTitle: `友链 | ${themeConfig.siteName}` }) %>
</head>

<body>
	<div id="app" class="main px-4 flex flex-col lg:flex-row">
		<%- include('./includes/sidebar', { isPostPage: false }) %>
		<div class="content-wrapper py-32 lg:p-8 lg:w-3/4 post-detail animated fadeIn">
			<div class="content-wrapper py-32 lg:p-8 lg:w-3/4">
				<article>
					<!-- <div class="post-content-wrapper"> -->
					<div class="post-content">
						<div class="friends-desc">
							<%- site.customConfig.descfriend %>
						</div>
						<h2 id="text-lg text-gray-700 mb-8">
							<i class="ri-user-heart-line"></i>
							友链列表
						</h2>
						<% if (site.customConfig.friends) { %>
						<% site.customConfig.friends.forEach(function(friend) { %>
						<div class="friend-box">
							<img class="friend-avatar" src="<%= friend.siteLogo %>">
							<div class="flink-info">
								<% if(friend.siteLink == "/friendssq") { %>
								<a class="bg-black" href="<%= friend.siteLink %>"
									target="_Self"><%= friend.siteName %></a>
								<% } else { %>
								<a class="bg-black" href="<%= friend.siteLink %>"
									target="_blank"><%= friend.siteName %></a>
								<% } %>
								<br />
								<div class="flink-info-desc bg-white">
									<%= friend.description %>
								</div>
							</div>
						</div>
						<% }); %>
						<% } else { %>
						暂无友链，快来申请吧！
						<% } %>
					</div>
					<!-- </div> -->
				</article>
			</div>
		</div>
	</div>

	<%- include('./includes/scripts') %>
</body>

</html>