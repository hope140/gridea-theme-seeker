<div id="sidebar" class="sidebar-wrapper lg:static lg:w-1/4">
  <div class="lg:sticky top-0">
    <div class="sidebar-content">
      <div class="flex lg:block p-4 lg:px-0 items-center fixed lg:static lg:block top-0 right-0 left-0 bg-white z-50">
        <i class="ri-menu-2-line lg:mt-4 text-2xl cursor-pointer animated fadeIn" onclick="openMenu()"></i>
        <a href="<%= themeConfig.domain %>">
          <img class="animated fadeInLeft avatar rounded-lg mx-4 lg:mt-32 lg:mx-0 mt-0 lg:w-24 lg:h-24 w-12 w-12" src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>" alt="">
        </a>
        <h1 class="animated fadeInLeft lg:text-4xl font-extrabold lg:mt-8 mt-0 text-xl" style="animation-delay: 0.2s"><%= themeConfig.siteName %></h1>
      </div>
      <% if (!isPostPage) { %>
        <div class="animated fadeInLeft" style="animation-delay: 0.4s">
          <p class="my-4 text-gray-600 font-light hidden lg:block">
            <%- themeConfig.siteDescription %>
          </p>
          <div class="animated fadeInLeft social-container hidden lg:block" style="animation-delay: 0.6s">
            <% ['github', 'twitter', 'weibo', 'zhihu', 'facebook', 'telegram', 'dribbble', 'instagram', 'behance', 'qq'].forEach((item) => { %>
              <% if (site.customConfig[item]) { %>
                <a href="<%= site.customConfig[item] %>" target="_blank" class="mr-4 text-xl text-gray-400 font-light hover:text-gray-900">
                  <i class="ri-<%= item %>-line"></i>
                </a>
              <% } %>
            <% }) %>
          </div>
        </div>
      <% } else { %>
        <div class="animated fadeInLeft" style="animation-delay: 0.4s">
          <p class="my-4 text-gray-600 font-light hidden lg:block">
            文章目录
          </p>
          <div class="toc-container hidden lg:block">
            <%- post.toc %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<div class="menu-container">
  <i class="ri-arrow-left-line text-2xl cursor-pointer animated fadeIn close-menu-btn" onclick="closeMenu()"></i>
  <div>
    <% menus.forEach(function(menu, index) { %>
      <% if (menu.openType === 'External') { %>
        <a href="<%= menu.link %>" class="menu" style="animation-delay: <%- index * 0.2 %>s" target="_blank">
          <%= menu.name %>
        </a>
      <% } else { %>
        <a href="<%= menu.link %>" class="menu" style="animation-delay: <%- index * 0.2 %>s">
          <%= menu.name %>
        </a>
      <% } %>
    <% }); %>
  </div>
  <div class="site-footer">
    <div class="py-4 text-gray-700"><%- themeConfig.footerInfo %></div>
    <a class="rss" href="<%= themeConfig.domain %>/atom.xml" target="_blank">RSS</a>
  </div>
</div>
<div class="mask" onclick="closeMenu()">
</div>